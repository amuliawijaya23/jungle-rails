<section class="signup-form">
  <h2>Sign In</h2>

  <%= form_tag '/login' do %>
  
    <div class="form-fields">
      <%= label_tag :email, 'Email' %>
      <%= text_field_tag :email %>
    </div>
  
    <div class="form-fields">
      <%= label_tag :password, 'Password' %>
      <%= password_field_tag :password %>
    </div>

    <div class="form-fields-submit">
      <%= submit_tag "Submit" %>
    </div>

  <% end %>
</section>